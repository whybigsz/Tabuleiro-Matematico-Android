<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/home_btn_local"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_local" />

        <Button
            android:id="@+id/home_btn_online"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_online" />

        <Button
            android:id="@+id/home_btn_leaderboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_leaderboard" />

        <Button
            android:id="@+id/home_btn_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_settings" />

        <Button
            android:id="@+id/home_btn_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_about" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>